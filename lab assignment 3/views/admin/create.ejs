<form class="container" style="width: 800px;" action="/admin/create" method="POST">
  <div class="form-group">
    <label for="inputTitle" class="form-label">Title</label>
    <input type="text" class="form-control" id="inputTitle" name="title" placeholder="Enter product title">
  </div>

  <div class="form-group">
    <label for="inputDescription" class="form-label">Description</label>
    <input type="text" class="form-control" id="inputDescription" name="description" placeholder="Enter description">
  </div>

  <div class="form-group">
    <label for="inputPrice" class="form-label">Price</label>
    <input type="text" class="form-control" id="inputPrice" name="price" placeholder="Enter price">
  </div>

  <div class="form-group my-3">
    <label for="">Featured?
      <input name="isFeatured" type="checkbox" class="form-check-input" />
    </label>
  </div>

  <div class="col-12">
    <button type="submit" class="btn "  style="background-color: #0047b6; color: white;">Create</button>
  </div>
</form>
